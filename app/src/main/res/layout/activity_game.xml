<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".screens.activities.GameActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLineLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLineRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/verticalGuideLineRight"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine"
        android:src="@drawable/gold"
        android:contentDescription="@string/gold_button" />

    <ImageView
        android:id="@+id/x200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x200"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideLineRight"
        android:contentDescription="@string/x200" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnPlay">

        <ImageView
            android:id="@+id/element1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_1_939"
            android:contentDescription="@string/god" />

        <ImageView
            android:id="@+id/element2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_2_939"
            android:contentDescription="@string/golden_plate" />

        <ImageView
            android:id="@+id/element3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_3_939"
            android:contentDescription="@string/coin" />

        <ImageView
            android:id="@+id/element4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_4_939"
            android:contentDescription="@string/golden_sun" />

        <ImageView
            android:id="@+id/element5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_5_939"
            android:contentDescription="@string/magic_element" />

        <ImageView
            android:id="@+id/element6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/element_6_939"
            android:contentDescription="@string/ring" />

    </GridLayout>

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/button_choose" />

</androidx.constraintlayout.widget.ConstraintLayout>